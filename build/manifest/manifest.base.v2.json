{
  "author": "Muniz",
  "description": "Muniz 浏览器插件 模版",
  "homepage_url": "https://github.com/1160007652",
  "name": "Muniz 浏览器插件 模版",
  "short_name": "muniz-ext-tpl",
  "manifest_version": 2,
  "permissions": ["storage", "downloads", "tabs"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "js": ["js/baidu.js"],
      "matches": ["https://www.baidu.com/*", "http://www.baidu.com/*"],
      "run_at": "document_start"
    },
    {
      "js": ["js/google.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": ["images/*.png"],
  "content_security_policy2": "script-src 'self' 'wasm-eval'; object-src 'self'",
  "content_security_policy1": "script-src 'self' blob: 'unsafe-eval' 'wasm-eval'; object-src 'self'",
  "a": {
    "content_security_policy": {
      "object-src": "self",
      "sandbox": "sandbox allow-scripts; script-src 'self' blob: 'unsafe-eval' 'wasm-eval' https://example.com"
    }
  }
}
